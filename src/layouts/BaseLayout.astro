---
// src/layouts/BaseLayout.astro
import NavbarWithPattern from '../components/navbar-with-pattern.astro';
interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "A modern scoring app for the card game Pepper"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | Pepper Scorer</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-gray-50 flex flex-col">
    <NavbarWithPattern />
    <main class="flex-grow container mx-auto px-4 py-8">
      <slot />
    </main>

    <footer class="bg-gray-100 border-t">
      <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <p class="text-center text-gray-600 text-sm">
          &copy; {new Date().getFullYear()} William M. Wolf. Game rules available in the Rules section.
        </p>
      </div>
    </footer>
  </body>
</html>